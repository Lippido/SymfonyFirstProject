{% extends 'no-nav-base.html.twig' %}

{% block title %}Register - MusicApp{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-box">
        <div class="auth-header">
            <h1>MusicApp</h1>
            <p>Create your account</p>
        </div>

        {% if registrationForm.vars.errors|length > 0 %}
            <div class="auth-alert auth-error">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        {{ form_start(registrationForm, { 'attr': { 'class': 'auth-form' } }) }}
            <div class="form-group">
                {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-input', 'placeholder': 'Choose a username'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.plainPassword.first, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-input', 'placeholder': 'Choose a password'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.plainPassword.second, 'Confirm Password', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-input', 'placeholder': 'Confirm your password'}}) }}
            </div>

            {{ form_errors(registrationForm) }}

            <button type="submit" class="auth-button">Register</button>

            <div class="auth-footer">
                Already have an account? <a href="{{ path('app_login') }}" class="auth-link">Sign in here</a>
                <br>
                <a href="{{ path('search_tracks') }}" class="auth-link">Continue without login</a>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
